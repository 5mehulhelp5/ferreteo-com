/** @var \Mageplaza\ProductFinder\Block\Product\Comparision $block */

$compareCollection = $block->getCompareCollection();
?>
<?php if (count($compareCollection) > 0) : ?>
    <?php foreach ($compareCollection as $key => $item) : ?>
        <div class="mppf-filter-label">
            <span><?= /** @noEscape */ $key ?></span>
            <?php foreach ($item as $value) : ?>
                <div class="mppf-option-label"><?= /** @noEscape */ $value ?></div>
            <?php endforeach; ?>
        </div>
    <?php endforeach; ?>
<?php else : ?>
    <div class="message info empty">
        <div><?= /** @noEscape */ __('We can\'t find compare matching the product.') ?></div>
    </div>
<?php endif; ?>
